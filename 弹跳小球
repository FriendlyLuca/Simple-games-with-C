#include<stdio.h>
#include<stdlib.h>
#include<windows.h>
int main()
{
	int i,j,x,y,v,k,v2,t;
	const hight=25;//定义小球在高度多高的方框内弹
	const wide=40;//方框宽度
	t=0;
	v=1;//这是小球垂直速度
	v2=2;//小球水平速度
	y=0;
	for(t=0,x=0;;t++)
	{
		x+=v;
		y+=v2;
		Sleep(50);
		system("cls");
		for(i=0;i<x;i++)
			printf("                                         |\n");这是右边
		for(j=0;j<y;j++)
			printf(" ");
		printf("o");
		for(j=y;j<wide;j++)
			printf(" ");
		printf("|\n");
		for(i=x;i<hight;i++)
			printf("                                         |\n");
		printf("-----------------------------------------|");//这是底边
		if (x==0||x==hight)
			v=-v;
		if (y==0||y==wide)
			v2=-v2;

	}
	return 0;
}
